---
import SocialIcons from "./SocialIcons.astro";

const year = new Date().getFullYear();
---

<footer class="w-full px-4 py-4">
    <div class="flex flex-row gap-4 items-start justify-between">
        <div class="flex flex-row items-center justify-between gap-2 md:justify-start">
            <p class="text-xs font-normal text-foreground/40">
                &copy; <span class="font-serif italic">{year}</span> Kyle Dickey
            </p>
        </div>

        <SocialIcons size="size-3" />
    </div>
</footer>
